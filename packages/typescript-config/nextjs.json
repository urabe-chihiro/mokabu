{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "module": "esnext",
    "jsx": "preserve",
    "incremental": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src", "next-env.d.ts"],
  "exclude": ["node_modules"]
}

